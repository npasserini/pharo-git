specs
defaultSpec
	<spec: #default>
	^ SpecLayout composed
		newColumn: [ :col | 
			col
				newRow: [ :row | 
					row
						add: #nameLabel width: 100 * World displayScaleFactor;
						add: #nameInput ]
					height: self inputTextHeight;
				newRow: [ :row | 
					row
						add: #emailLabel width: 100 * World displayScaleFactor;
						add: #emailInput ]
					height: self inputTextHeight;
				add: #globalCheckbox height: self inputTextHeight ]